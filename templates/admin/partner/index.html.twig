{% extends 'base.html.twig'%}

{% block title 'Gérer les partenaires' %}

{% block body %}
<div class="container mt-4">
    <h1>Gestion des partenaires</h1>

    {% for message in app.flashes ('success')%}
        <div class="alert alert-success">
            {{message}}
        </div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        
        {% for partner in partners%}
        <tr>
            <td>{{partner.name}}</td>
            <td>
                <a href="{{path('admin_partner_edit', {id: partner.id})}}" class= "btn btn-secondary">Modifier</a>
                {{ include('admin/partner/_delete_form.html.twig') }}
            </td>
        </tr>
        {% endfor %}
        </tbody>

    </table>

    <div class="text-right">
        <a href="{{path('admin_partner_new')}}" class="btn btn-primary"> Créer un partenaire</a>


    </div>
    
</div>
{% endblock %}



