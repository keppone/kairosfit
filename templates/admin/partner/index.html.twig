{% extends 'base.html.twig' %}

{% block title %}Nos partenaires{% endblock %}

{% block body %}
    <h1>Nos partenaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Activation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.name }}</td>
                <td>{{ partner.activate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_partner_edit', {'id': partner.id}) }}" class="btn btn-warning">Modifier</a>
                    {{ include('admin/partner/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun partenaire trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_partner_new') }}" class="btn btn-primary">Créer un nouveau partenaire</a>
{% endblock %}
