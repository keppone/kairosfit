<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">
            <a href="{{ path('app_partner_show', {slug: partner.slug, id: partner.id}) }}">
                {{ partner.name }}
            </a>
        </h2>
        <div class="text-primary">
            {{partner.activateText}}
        </div>
        <p class="card-text">{{ partner.description }} </p>
        <div class="card-text">
            {{partner.email}}
        </div>
    </div>
</div>